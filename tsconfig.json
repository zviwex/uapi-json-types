{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "outDir": "build",
    "typeRoots": ["@types", "node_modules/@types"]
    // "paths": {
    //   "*": [
    //     "./@types",
    //     "./node_modules/@types"
    //   ]
    // }
  },
  "include": [
    "./lib/**/*.ts",
    "./@types/**/*.d.ts",
  ]
}